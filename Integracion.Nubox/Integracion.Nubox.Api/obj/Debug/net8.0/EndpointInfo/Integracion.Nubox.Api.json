  "components": {
    "schemas": {
      "AsistenciaDataDto": {
        "type": "object",
        "properties": {
          "trabajadorId": {
            "type": "string",
            "format": "uuid"
          },
          "dniTrabajador": {
            "type": "string",
            "nullable": true
          },
          "nombresTrabajador": {
            "type": "string",
            "nullable": true
          },
          "apellidosTrabajador": {
            "type": "string",
            "nullable": true
          },
          "fecha": {
            "type": "string",
            "format": "date-time"
          },
          "horaEntrada": {
            "type": "string",
            "format": "date-span",
            "nullable": true
          },
          "horaSalida": {
            "type": "string",
            "format": "date-span",
            "nullable": true
          },
          "horasRegulares": {
            "type": "number",
            "format": "double"
          },
          "horasExtras": {
            "type": "number",
            "format": "double"
          },
          "tipo": {
            "$ref": "#/components/schemas/TipoAsistencia"
          },
          "observaciones": {
            "type": "string",
            "nullable": true
          },
          "idExternoPartner": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AuthRequest": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "InformacionBasicaTrabajador": {
        "type": "object",
        "properties": {
          "idTrabajador": {
            "type": "string",
            "format": "uuid"
          },
          "nombresTrabajador": {
            "type": "string",
            "nullable": true
          },
          "apellidosTrabajador": {
            "type": "string",
            "nullable": true
          },
          "dniTrabajador": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "NominaRequest": {
        "type": "object",
        "properties": {
          "idCompania": {
            "type": "string",
            "format": "uuid"
          },
          "origen": {
            "$ref": "#/components/schemas/Sistemas"
          },
          "trabajadores": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/InformacionBasicaTrabajador"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Sistemas": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "TipoAsistencia": {
        "enum": [
          1,
          2,
          3,
          4,
          5,
          6
        ],
        "type": "integer",
        "format": "int32"
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using Bearer scheme. Example: \"Authorization: Bearer {token}\"",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}