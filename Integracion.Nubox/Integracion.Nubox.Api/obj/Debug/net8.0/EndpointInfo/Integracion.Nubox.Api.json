            }
          }
        }
      }
    },
    "/api/asistencia/resumenes/{companiaId}": {
      "get": {
        "tags": [
          "Asistencia"
        ],
        "operationId": "GetResumenesAsistencia",
        "parameters": [
          {
            "name": "companiaId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "año",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "mes",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "semana",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "quincena",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { }
              }
            }
          }
        }
      }
    },
    "/api/asistencia/procesar/{companiaId}": {
      "post": {
        "tags": [
          "Asistencia"
        ],
        "operationId": "ProcesarAsistenciaDirecta",
        "parameters": [
          {
            "name": "companiaId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/AsistenciaDataDto"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/asistencia/health": {
      "get": {
        "tags": [
          "Asistencia"
        ],
        "operationId": "AsistenciaHealth",
