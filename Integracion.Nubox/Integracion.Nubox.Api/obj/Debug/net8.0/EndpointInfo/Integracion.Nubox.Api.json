    "/api/asistencia/upload-excel/{companiaId}": {
      "post": {
        "tags": [
          "Asistencia"
        ],
        "operationId": "UploadExcelAsistencia",
        "parameters": [
          {
            "name": "companiaId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          },
          "required": true
        },
        "responses": {
          "202": {
            "description": "Accepted"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/asistencia/transaction/{transactionId}": {
      "get": {
