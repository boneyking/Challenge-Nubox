        "tags": [
          "Asistencia"
        ],
        "operationId": "GetRegistrosAsistencia",
        "parameters": [
          {
            "name": "companiaId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "fechaDesde",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "fechaHasta",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
